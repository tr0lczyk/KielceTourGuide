<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Style for a tab that displays a category name -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#A8A19E</item>
    </style>

    <style name="CategoryStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/category</item>
    </style>

    <style name="list_item_main_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="list_item_image">
        <item name="android:layout_width">@dimen/list_item_image</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="list_item_text_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/list_item_height</item>
        <item name="android:paddingTop">@dimen/list_item_padding</item>
        <item name="android:paddingLeft">@dimen/list_item_padding</item>
    </style>

    <style name="list_item_place_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="list_item_place_description">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/place_name</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="list_item_info_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:paddingRight">@dimen/list_item_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_padding</item>
    </style>

    <style name="item_description_main_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/background_color</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/list_item_padding</item>
    </style>

    <style name="item_description_place_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_description_weighten_height</item>
        <item name="android:layout_marginBottom">@dimen/item_description_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="item_description_place_description">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_description_weighten_height</item>
        <item name="android:layout_marginBottom">@dimen/item_description_margin</item>
        <item name="android:layout_weight">3</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="location_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_description_weighten_height</item>
        <item name="android:layout_weight">2</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="location_container_image">
        <item name="android:layout_width">@dimen/list_item_image</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">@dimen/item_description_margin</item>
    </style>

    <style name="location_container_description_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_toRightOf">@+id/place_description_location</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/item_description_margin</item>
    </style>

</resources>
