<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/item_description_main_layout">

    <TextView
        android:id="@+id/place_description_name"
        tools:text="John Burger"
        style="@style/item_description_place_name" />

    <ImageView
        android:id="@+id/place_description_image_id"
        tools:src="@drawable/burgerco"
        style="@style/item_description_place_description" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_description_weighten_height"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/place_description_location"
            android:layout_width="@dimen/list_item_image"
            android:layout_height="wrap_content"
            android:src="@drawable/local2"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/item_description_margin"/>

        <TextView
            android:id="@+id/place_description_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textSize="28sp"
            android:textStyle="italic"
            android:textColor="@android:color/black"
            android:layout_toRightOf="@+id/place_description_location"
            tools:text="A place worth recommending"
            android:layout_marginLeft="@dimen/item_description_margin" />
    </RelativeLayout>
</LinearLayout>